<!doctype html>
<html>
  <%= partial("partials/document/head", :locals => {
    :extra => partial("partials/blog/head"),
    :title => (current_article.title unless current_article.nil?)
  }) %>

  <body>
    <div class="page">
      <%= partial "partials/navbar" %>
      <%= partial "partials/header" %>
      <%= partial("partials/blog/content", :locals => { :content => yield }) %>
      <%= partial "partials/blog/sidebar" %>
      <%= partial "partials/footer" %>
    </div>

    <%= partial "partials/document/foot" %>
  </body>
</html>
