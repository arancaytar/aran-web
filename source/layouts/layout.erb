<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="generator" value="Middleman">

    <link rel="icon" href="/images/icon.png" />
    <link href="https://use.fontawesome.com/releases/v5.0.7/css/all.css" rel="stylesheet">

    <%= stylesheet_link_tag "site" %>
    <% if (current_page.data.styles) %>
      <% current_page.data.styles.each do |style| %>
        <link rel="stylesheet" href="<%= style %>" />
      <% end %>
    <% end %>
    <%= partial "partials/title" %>
  </head>
  <body>

    <div class="page">
      <%= partial "partials/navbar" %>
      <%= partial "partials/header" %>
      <%= partial("partials/content", :locals => { :content => yield }) %>
      <%= partial "partials/footer" %>
    </div>

    <script defer src="https://use.fontawesome.com/releases/v5.0.6/js/all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.20.1/moment.min.js" integrity="sha256-ABVkpwb9K9PxubvRrHMkk6wmWcIHUE9eBxNZLXYQ84k=" crossorigin="anonymous"></script>
    <%= javascript_include_tag "site" %>
    <% if (current_page.data.scripts) %>
      <% current_page.data.scripts.each do |script| %>
        <script src="<%= script %>"></script>
      <% end %>
    <% end %>
    <%= partial "partials/tracker" %>
  </body>
</html>
